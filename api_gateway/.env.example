# Application
APP_NAME=Notification API Gateway
VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=3000

# CORS
ALLOWED_ORIGINS=*

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# Or use connection URL
# REDIS_URL=redis://localhost:6379/0

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
# Or use connection URL
# RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Queue Configuration
EXCHANGE_NAME=notifications.direct
EMAIL_QUEUE=email.queue
PUSH_QUEUE=push.queue
FAILED_QUEUE=failed.queue
EMAIL_PRIORITY_QUEUE=email.priority.queue
PUSH_PRIORITY_QUEUE=push.priority.queue

# Service URLs
USER_SERVICE_URL=http://localhost:3001
TEMPLATE_SERVICE_URL=http://localhost:3002

# Authentication
API_KEY_HEADER=X-API-Key
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_ENABLED=True

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30

# Notification Settings
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5
NOTIFICATION_TTL_SECONDS=86400

# Idempotency
IDEMPOTENCY_TTL_SECONDS=86400
