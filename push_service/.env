SERVICE_NAME=push-service
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

API_HOST=0.0.0.0
API_PORT=8003

RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=api_user
RABBITMQ_PASSWORD=StrongPassword123
RABBITMQ_VHOST=/
RABBITMQ_PUSH_QUEUE=push.queue
RABBITMQ_FAILED_QUEUE=failed.queue
RABBITMQ_EXCHANGE=notifications.direct

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

FIREBASE_CREDENTIALS_PATH=firebase-credentials.json
# Circuit Breaker Settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30
# Retry Settings
MAX_RETRY_ATTEMPTS=3
RETRY_INITIAL_DELAY=1.0
RETRY_MAX_DELAY=60.0
RETRY_EXPONENTIAL_BASE=2.0
# Performance Settings
MAX_CONCURRENT_MESSAGES=100
MESSAGE_PREFETCH_COUNT=10
# Idempotency
IDEMPOTENCY_TTL=86400
# Logging
LOG_LEVEL=INFO
API_GATEWAY_URL=http://localhost:8004